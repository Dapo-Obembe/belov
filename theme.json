{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1440px"
    },
    "color": {
      "palette": [
        {
          "slug": "belov-black",
          "color": "#030303",
          "name": "Black"
        },
        {
          "slug": "belov-blue",
          "color": "#2A63E2",
          "name": "Blue"
        },
        {
          "slug": "belov-gray",
          "color": "#BBBBBB",
          "name": "Gray"
        },
        {
          "slug": "belov-light-gray",
          "color": "#D6D6D6",
          "name": "Light Gray"
        },
        {
          "slug": "belov-white",
          "color": "#ffffff",
          "name": "White"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'IBM Plex Sans', sans-serif",
          "slug": "ibmplexsans",
          "name": "Body - IBM Plex Sans",
          "fontFace": [
            {
              "fontFamily": "'IBM Plex Sans', sans-serif",
              "fontWeight": "300",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/ibm-plex-sans/IBMPlexSans-Thin.ttf"]
            },
            {
              "fontFamily": "'IBM Plex Sans', sans-serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/ibm-plex-sans/IBMPlexSans-Regular.ttf"
              ]
            },
            {
              "fontFamily": "'IBM Plex Sans', sans-serif",
              "fontWeight": "500",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/ibm-plex-sans/IBMPlexSans-Medium.ttf"
              ]
            },
            {
              "fontFamily": "'IBM Plex Sans', sans-serif",
              "fontWeight": "600",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/ibm-plex-sans/IBMPlexSans-SemiBold.ttf"
              ]
            },
            {
              "fontFamily": "'IBM Plex Sans', sans-serif",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/ibm-plex-sans/IBMPlexSans-Bold.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.64rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "0.8rem",
          "name": "Medium"
        },
        {
          "slug": "regular",
          "size": "1rem",
          "name": "Regular"
        }
      ]
    },
    "custom": {
      "typography": {
        "font-size": {
          "heading-1": "clamp(2.113rem, 1.9252rem + 0.9390000000000001vw, 3.052rem)",
          "heading-2": "clamp(1.699rem, 1.5506000000000002rem + 0.7419999999999998vw, 2.441rem)",
          "heading-3": "clamp(1.35rem, 1.2294rem + 0.603vw, 1.953rem)",
          "heading-4": "clamp(1.253rem, 1.1909999999999998rem + 0.31000000000000005vw, 1.563rem)",
          "heading-5": "clamp(1.063rem, 1.0255999999999998rem + 0.18700000000000006vw, 1.25rem)",
          "heading-6": "clamp(1.063rem, 1.0255999999999998rem + 0.18700000000000006vw, 1.25rem)"
        }
      },
      "line-height": {
        "tiny": 1.15,
        "small": 1.3,
        "medium": 1.4,
        "normal": 1.6
      }
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--belov-white)",
      "text": "var(--wp--preset--color--belov-black)"
    },
    "typography": {
      "fontFamily": "'IBM Plex Sans', sans-serif",
      "lineHeight": "1.75",
      "fontSize": "1rem"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}
